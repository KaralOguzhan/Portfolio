@model MvcPortfolio.Models.Entity.TblTestimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Referans Güncelleme Sayfası</h2>

<form method="post">

    @Html.HiddenFor(x => x.TestimonialId, new { @class = "form-control" })
    <label>Referansın Adı</label>
    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
    <label>Referansın Ünvanı </label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <label>Referans Yorumu </label>
    @Html.TextAreaFor(x => x.Comment, 5, 1, new { @class = "form-control" })
    <label>Referans Fotoğrafı</label>
    @Html.TextBoxFor(x=>x.ImageUrl, new {@class="form-control"})
    @Html.HiddenFor(x => x.Status, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-success">Referansı Güncelle</button>
</form>