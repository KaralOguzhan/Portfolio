@model List<MvcPortfolio.Models.Entity.TblSkill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeteneklerim</h2>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Yeteneğin Adı</th>
        <th>Yetenek Skoru</th>
        
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.SkillId</td>
            <td>@item.Name</td>
            <td>@item.SkillScore</td>
            

            <td><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<td><a href="/Skill/AddSkill" class="btn btn-outline-primary">Yeni Yetenek Girişi</a></td>
