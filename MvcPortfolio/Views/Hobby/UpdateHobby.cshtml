@model MvcPortfolio.Models.Entity.TblHobby
@{
    ViewBag.Title = "UpdateHobby";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hobi Güncelleme Sayfası</h2>

<form method="post">

    @Html.HiddenFor(x => x.HobbyId, new { @class = "form-control" })
    <label>Hobby Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <label>Hobiye Tutkun Olma Seviyen 0-5 </label>
    @Html.TextBoxFor(x => x.Score, new { @class = "form-control" })
    
    <br />
    <button class="btn btn-outline-success">Hobimi Güncelle</button>
</form>