@model List<MvcPortfolio.Models.Entity.TblEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Eğitim Hayatım</h2>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Okul Adı</th>
        <th>Bölüm Adı</th>
        <th>Eğitim Alınan Yıl</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EducationId</td>
            <td>@item.EducationName</td>
            <td>@item.EducationSubName</td>
            <td>@item.EducationDate</td>

            <td><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<td><a href="/Education/AddEducation" class="btn btn-outline-primary">Yeni Eğitim Girişi</a></td>
